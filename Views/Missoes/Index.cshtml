@model IEnumerable<SoldadosDoImperador.Models.Missao>

@{
    ViewData["Title"] = "Registro de Missões";
}

<h1>@ViewData["Title"]</h1>

@if (User.IsInRole("PRIMARCH"))
{
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">
            + Criar Nova Missão
        </a>
    </div>
}

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localizacao)
            </th>
            @if (User.IsInRole("PRIMARCH"))
            {
                <th style="width: 200px;">Ações</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Localizacao)
                </td>
                @if (User.IsInRole("PRIMARCH"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>