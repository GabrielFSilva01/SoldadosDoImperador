@model IEnumerable<SoldadosDoImperador.Models.Soldado>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar novo Astarte</a>
</p>
<table class="table table-dark table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Capitulo)</th>
            <th>@Html.DisplayNameFor(model => model.Patente)</th>
            <th>@Html.DisplayNameFor(model => model.Altura)</th>
            <th>@Html.DisplayNameFor(model => model.Peso)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Capitulo)</td>
                <td>@Html.DisplayFor(modelItem => item.Patente)</td>
                <td>@Html.DisplayFor(modelItem => item.Altura)</td>
                <td>@Html.DisplayFor(modelItem => item.Peso)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>