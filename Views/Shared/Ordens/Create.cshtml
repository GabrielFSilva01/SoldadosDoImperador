@model SoldadosDoImperador.Models.Ordem

@{
    ViewData["Title"] = "Emitir Nova Ordem";
}

<h1>@ViewData["Title"]</h1>

<h4>Registro de Ordem</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="ViewBag.Status">
                    <option value="">-- Selecione o Status --</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DataEmissao" class="control-label"></label>
                <input asp-for="DataEmissao" class="form-control" />
                <span asp-validation-for="DataEmissao" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PrazoFinal" class="control-label"></label>
                <input asp-for="PrazoFinal" class="form-control" />
                <span asp-validation-for="PrazoFinal" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SoldadoId" class="control-label">Soldado Alvo</label>
                <select asp-for="SoldadoId" class="form-control" asp-items="ViewBag.SoldadoId">
                    <option value="">-- Selecione o Soldado --</option>
                </select>
                <span asp-validation-for="SoldadoId" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Emitir Ordem" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-light">Voltar para Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}