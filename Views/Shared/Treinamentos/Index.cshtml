@model IEnumerable<SoldadosDoImperador.Models.Treinamento>

@{
    ViewData["Title"] = "Lista de Treinamentos";
}

<div class="container mt-4">
    <h1 class="mb-4">Treinamentos Astartes</h1>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Novo Treinamento
        </a>
    </div>

    <div class="table-responsive rounded-3 overflow-hidden">
        <table class="table table-dark table-striped table-hover mb-0">
            <thead class="thead-dark">
                <tr>
                    <th class="ps-3">@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.Area)</th>
                    <th>@Html.DisplayNameFor(model => model.DuracaoHoras)</th>
                    <th>@Html.DisplayNameFor(model => model.DataRealizacao)</th>
                    <th class="text-center pe-3">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-3">@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Area)</td>
                        <td>@Html.DisplayFor(modelItem => item.DuracaoHoras)h</td>
                        <td>@item.DataRealizacao.ToString("dd/MM/yyyy")</td>
                        <td class="text-center pe-3">
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" title="Detalhes">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" title="Excluir">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <style>
        /* Estilos otimizados */
        .table-dark {
            --bs-table-bg: #1a1a1a;
            --bs-table-striped-bg: #1e1e1e;
            --bs-table-hover-bg: #2a2a2a;
        }

            .table-dark thead th {
                background-color: #0d0d0d;
                font-weight: 600;
                position: sticky;
                top: 0;
            }

        .table-hover tbody tr:hover {
            background-color: var(--bs-table-hover-bg);
            transition: all 0.2s ease;
        }

        .btn-group .btn {
            margin: 0 2px;
            padding: 0.25rem 0.5rem;
        }

        .table-responsive {
            border-radius: 0.5rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
    </style>
}