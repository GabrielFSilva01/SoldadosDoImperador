@model SoldadosDoImperador.Models.ItemBatalha

@{
    ViewData["Title"] = "Adicionar Item de Batalha";
}

<h1>@ViewData["Title"]</h1>

<h4>ItemBatalha</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" class="form-control" asp-items="Html.GetEnumSelectList<TipoItem>()">
                    <option value="">-- Selecione o Tipo --</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Peso" class="control-label"></label>
                <input asp-for="Peso" class="form-control" />
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Especificacao" class="control-label"></label>
                <textarea asp-for="Especificacao" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Especificacao" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SoldadoId" class="control-label">Atribuir ao Soldado</label>
                <select asp-for="SoldadoId" class="form-control" asp-items="ViewBag.SoldadoId">
                    <option value="">-- Selecione o Soldado --</option>
                </select>
                <span asp-validation-for="SoldadoId" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Adicionar Item" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-light">Voltar para Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}