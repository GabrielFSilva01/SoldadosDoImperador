@model IEnumerable<SoldadosDoImperador.Models.ItemBatalha>

@{
    ViewData["Title"] = "Arsenal Militarum";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-shield-alt me-2"></i>Itens de Batalha</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Novo Item
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-dark table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                    <th>Peso (kg)</th>
                    <th>Especificações</th>
                    <th>Portador</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Peso)</td>
                        <td>@Html.DisplayFor(modelItem => item.Especificacao)</td>
                        <td>@Html.DisplayFor(modelItem => item.Soldado.Nome)</td>
                        <td class="text-center">
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" title="Detalhes">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" title="Excluir">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <style>
        .table-dark {
            background-color: #1a1a1a;
        }

            .table-dark thead th {
                background-color: #0d0d0d;
            }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(255,255,255,0.05);
        }

        .table-hover tbody tr:hover {
            background-color: rgba(255,255,255,0.1);
        }
    </style>
}