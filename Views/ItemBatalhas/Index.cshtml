@model IEnumerable<SoldadosDoImperador.Models.ItemBatalha>

@{
    ViewData["Title"] = "Arsenal";
}

<h1>@ViewData["Title"]</h1>

@if (User.IsInRole("PRIMARCH"))
{
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">+ Adicionar Item ao Arsenal</a>
    </div>
}

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Tipo)</th>
            <th>@Html.DisplayNameFor(model => model.Peso)</th>
            <th>@Html.DisplayNameFor(model => model.Soldado)</th>
            @if (User.IsInRole("PRIMARCH"))
            {
                <th>Ações</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                <td>@Html.DisplayFor(modelItem => item.Peso) kg</td>
                <td>@Html.DisplayFor(modelItem => item.Soldado.Nome)</td>

                @if (User.IsInRole("PRIMARCH"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>