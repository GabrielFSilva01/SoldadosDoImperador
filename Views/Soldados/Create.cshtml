@model SoldadosDoImperador.Models.Soldado

@{
    ViewData["Title"] = "Registrar Novo Astartes";
}

<h1>@ViewData["Title"]</h1>

<h4>Registro de Soldado</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Capitulo" class="control-label"></label>
                <select asp-for="Capitulo" class="form-control" asp-items="ViewBag.Capitulo">
                    <option value="">-- Selecione o Capítulo --</option>
                </select>
                <span asp-validation-for="Capitulo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Patente" class="control-label"></label>
                <select asp-for="Patente" class="form-control" asp-items="ViewBag.Patente">
                    <option value="">-- Selecione a Patente --</option>
                </select>
                <span asp-validation-for="Patente" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Altura" class="control-label">Altura (Metros)</label>
                <input asp-for="Altura" class="form-control" />
                <span asp-validation-for="Altura" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Peso" class="control-label">Peso Corporal (KG)</label>
                <input asp-for="Peso" class="form-control" />
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Registrar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-light">Voltar para Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}