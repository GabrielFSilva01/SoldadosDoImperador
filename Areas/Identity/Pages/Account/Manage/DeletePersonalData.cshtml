@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Expurgar Dados Pessoais"; 
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-danger" role="alert">
    <p>
        <strong>Atenção: Excluir estes dados irá remover permanentemente a sua conta (Exterminatus), e esta ação não pode ser revertida.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Por favor, insira sua senha." />
                <label asp-for="Input.Password" class="form-label">Senha de Autorização</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-100 btn btn-lg btn-danger" type="submit">Expurgar Dados e Encerrar Conta</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}